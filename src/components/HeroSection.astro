---
// src/components/HeroSection.astro - Secci√≥n hero reutilizable
interface Props {
  title: string;
  subtitle: string;
  backgroundImage?: string;
  ctaText?: string;
  ctaLink?: string;
}

const { title, subtitle, backgroundImage, ctaText, ctaLink } = Astro.props;
---

<section class="relative h-96 md:h-screen flex items-center justify-center overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0 z-0">
    {backgroundImage ? (
      <img 
        src={backgroundImage}
        alt={title}
        class="w-full h-full object-cover opacity-30"
      />
    ) : null}
    <div class="absolute inset-0 bg-gradient-to-r from-primary via-secondary to-accent opacity-90"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 text-center px-4 max-w-4xl mx-auto">
    <h1 class="hero-text text-white mb-6 leading-tight animate-slide-in">
      {title}
    </h1>
    <p class="text-xl text-gray-100 mb-8 font-light max-w-2xl mx-auto">
      {subtitle}
    </p>
    
    {ctaText && ctaLink && (
      <a href={ctaLink} class="btn-cta inline-block">
        {ctaText}
      </a>
    )}
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2 animate-bounce hidden md:block">
    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>
