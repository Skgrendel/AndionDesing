---
// SportsCard.astro - Card deportiva con DaisyUI
interface Props {
  sport: string;
  image: string;
  description: string;
  benefits: string[];
}

const { sport, image, description, benefits } = Astro.props;
---

<div class="card-sport bg-white">
  <div class="relative overflow-hidden h-64">
    <img 
      src={image}
      alt={sport}
      class="w-full h-full object-cover transition-transform duration-500 hover:scale-110"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
    <div class="absolute bottom-0 left-0 right-0 p-4">
      <h3 class="text-2xl font-sport font-bold text-white">{sport}</h3>
    </div>
  </div>

  <div class="p-6">
    <p class="text-gray-600 text-sm mb-4 leading-relaxed">
      {description}
    </p>

    <!-- Beneficios -->
    <div class="space-y-2 mb-6">
      {benefits.map((benefit) => (
        <div class="flex items-start gap-2">
          <span class="text-primary font-bold mt-1">✓</span>
          <span class="text-sm text-gray-700">{benefit}</span>
        </div>
      ))}
    </div>

    <!-- CTA Button -->
    <a 
      href="/contacto"
      class="btn-cta w-full text-center block"
    >
      Diseña tu {sport.toLowerCase()}
    </a>
  </div>
</div>

<style>
  .card-sport {
    animation: slideIn 0.6s ease-out;
  }

  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
