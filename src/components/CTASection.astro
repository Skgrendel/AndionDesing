---
// src/components/CTASection.astro - Sección de llamada a la acción
interface Props {
  title: string;
  description: string;
  primaryButtonText: string;
  primaryButtonLink: string;
  secondaryButtonText?: string;
  secondaryButtonLink?: string;
}

const { 
  title, 
  description, 
  primaryButtonText, 
  primaryButtonLink,
  secondaryButtonText,
  secondaryButtonLink
} = Astro.props;
---

<section class="py-20 bg-gradient-to-r from-primary to-accent text-white">
  <div class="container mx-auto px-4 text-center max-w-2xl">
    <h2 class="text-4xl font-sport font-bold mb-6">
      {title}
    </h2>
    <p class="text-lg text-gray-100 mb-8">
      {description}
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a href={primaryButtonLink} class="btn btn-white btn-lg">
        {primaryButtonText}
      </a>
      {secondaryButtonText && secondaryButtonLink && (
        <a href={secondaryButtonLink} class="btn btn-outline btn-white btn-lg">
          {secondaryButtonText}
        </a>
      )}
    </div>
  </div>
</section>

<style>
  section {
    animation: fadeIn 0.6s ease-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
</style>
